@model List<EasyGame.Models.Order>
@{
    ViewData["Title"] = "Order History";
}

<h2>Your Order History</h2>

@if (Model.Any())
{
    @foreach (var order in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                <strong>Order #@order.Id</strong> - @order.OrderDate.ToString("MMM dd, yyyy h:mm tt")
                <span class="badge bg-success float-end">@order.Status</span>
            </div>
            <div class="card-body">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in order.OrderItems)
                        {
                            <tr>
                                <td>@item.Product.Name</td>
                                <td>@item.Quantity</td>
                                <td>$@item.Price.ToString("F2")</td>
                                <td>$@((item.Price * item.Quantity).ToString("F2"))</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th colspan="3">Total:</th>
                            <th>$@order.TotalAmount.ToString("F2")</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    }
}
else
{
    <p>You haven't placed any orders yet.</p>
    <a asp-action="Index" asp-controller="Products" class="btn btn-primary">Start Shopping</a>
}