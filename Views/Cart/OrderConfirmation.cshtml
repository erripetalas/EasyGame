@{
    ViewData["Title"] = "Order Confirmation";
}

@section Styles {
    <link rel="stylesheet" href="~/css/cart.css" asp-append-version="true" />
}

<div class="order-confirmation">
    <div class="success-icon">
        <i class="bi bi-check-circle-fill"></i>
    </div>

    <h1>Thank You for Your Order!</h1>

    <p class="lead">Your order has been successfully placed and is being processed.</p>

    <div class="order-number">
        Order Number: #@ViewBag.OrderId
    </div>

    <p>We've sent a confirmation email with your order details.</p>

    <div class="mt-4">
        <a href="@Url.Action("OrderHistory")" class="btn btn-primary me-2">
            <i class="bi bi-clock-history"></i> View Order History
        </a>
        <a href="@Url.Action("Index", "Products")" class="btn btn-secondary">
            <i class="bi bi-shop"></i> Continue Shopping
        </a>
    </div>
</div>