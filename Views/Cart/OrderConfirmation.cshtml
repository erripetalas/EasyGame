@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="text-center">
    <h2>Order Confirmed!</h2>
    <div class="alert alert-success">
        <h4>Thank you for your purchase!</h4>
        <p>Your order #@ViewBag.OrderId has been successfully placed.</p>
    </div>

    <div class="mt-3">
        <a asp-action="OrderHistory" class="btn btn-info">View Order History</a>
        <a asp-action="Index" asp-controller="Products" class="btn btn-primary">Continue Shopping</a>
    </div>

</div>