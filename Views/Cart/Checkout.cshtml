@model List<EasyGame.Models.CartItem>
@{
    ViewData["Title"] = "Checkout";
}

<h2>Checkout</h2>
<h3>Order Summary</h3>

<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Quantity</td>
                <td>$@item.Product.Price.ToString("F2")</td>
                <td>$@((item.Product.Price * item.Quantity).ToString("F2"))</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th colspan="3">Total Amount:</th>
            <th>$@ViewBag.CartTotal.ToString("F2")</th>
        </tr>
    </tfoot>
</table>

<form asp-action="ProcessOrder" method="post">
    <button type="submit" class="btn btn-success btn-lg">Complete Purchase</button>
    <a asp-action="Index" class="btn btn-secondary btn-lg">Back to Cart</a>
</form>